;----------// Theme Settings

  ; Layout settings

; CSS
  settings[disable_responsive_styles]     = 0
  settings[enable_custom_media_queries]   = 1
  settings[global_default_layout]         = 'standard-layout'
  settings[global_default_layout_toggle]  = 0
